% thanks: https://tex.stackexchange.com/questions/275600/beamer-themes-on-custom-folder
\makeatletter
  \def\beamer@calltheme#1#2#3{%
    \def\beamer@themelist{#2}
    \@for\beamer@themename:=\beamer@themelist\do
    {\usepackage[{#1}]{\beamer@themelocation/#3\beamer@themename}}}

  \def\usefolder#1{
    \def\beamer@themelocation{#1}
  }
  \def\beamer@themelocation{}

\usefolder{config}
\usetheme{nist}

% commands
\newcommand{\titleslide}{
  \begin{frame}[plain]
    \titlepage
  \end{frame}
}

\newcommand{\overviewslide}[1][Overview]{
  \begin{frame}{#1}
    \tableofcontents
  \end{frame}
}

\newcommand{\lastslide}[1]{
  \begin{frame}[plain]
    \centering
    \LARGE #1
  \end{frame}
}

\newcommand{\bibliographyslide}{
  \begin{frame}[allowframebreaks, noframenumbering]{References}
    \printbibliography
  \end{frame}
}

\newcommand{\presentationsectionNoStar}[1]{
  \def\sectiontitle{#1}
  \section{\sectiontitle}
}

\newcommand{\presentationsubsectionNoStar}[1]{
  \def\subsectiontitle{#1}
  \subsection{\subsectiontitle}
}

\newcommand{\presentationsectionStar}[1]{
  \def\sectiontitle{#1}
  \section*{\sectiontitle}
}

\newcommand{\presentationsubsectionStar}[1]{
  \def\subsectiontitle{#1}
  \subsection*{\subsectiontitle}
}

\newcommand{\presentationsection}[2]{
  \ifthenelse{\equal{#1}{*}}
    {\presentationsectionStar{#2}}
    {\presentationsectionNoStar{#1}}
}

\newcommand{\presentationsubsection}[2]{
  \ifthenelse{\equal{#1}{*}}
    {\presentationsubsectionStar{#2}}
    {\presentationsubsectionNoStar{#1}}
}

\newenvironment{slide}[1]{
  \begin{frame}[#1]
}{
  \end{frame}
}

\newenvironment{plainslide}[1][plain]{
  \begin{frame}[#1,plain]
}{
  \end{frame}
}

\newenvironment{sectionslide}[1][1]{
  \begin{frame}[#1]
    \frametitle{\sectiontitle}
}{
  \end{frame}
}

\newenvironment{subsectionslide}[1][1]{
  \begin{frame}[#1]
    \frametitle{\sectiontitle}
    \framesubtitle{\subsectiontitle}
}{
  \end{frame}
}
